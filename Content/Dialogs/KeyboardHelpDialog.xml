<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="620, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">

      <LabelWidget Font="{Fonts/Pericles32}" Text="键盘控制" HorizontalAlignment="Center"/>

      <CanvasWidget Margin="20, 15">

        <RectangleWidget FillColor="0, 0, 0, 0" OutlineColor="128, 128, 128, 128" OutlineThickness="1" />

        <ScrollPanelWidget Margin="4, 4" Direction="Vertical">

          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">

            <StackPanelWidget Direction="Vertical">
              <LabelWidget Text="W/A/S/D" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="移动鼠标" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="Space" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="Shift" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="E" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="C" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="Q" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="V" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="R" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="G" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="P" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="T" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="L" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="1 to 6" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="2xSpace or F" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="Space/Shift" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="鼠标左键" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="鼠标右键" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="鼠标左键拖动" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="鼠标右键拖动" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="鼠标左键长按" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="Shift + 鼠标左键" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="鼠标滚轮" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
              <LabelWidget Text="Escape" Font="{Fonts/Pericles18}" HorizontalAlignment="Center" />
            </StackPanelWidget>

            <CanvasWidget Size="16, 0" />

            <StackPanelWidget Direction="Vertical">
              <LabelWidget Text="移动" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="查看" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="跳跃" Font="{Fonts/Pericles18}" Color="160, 160, 160"/>
              <LabelWidget Text="切换潜行" Font="{Fonts/Pericles18}" Color="160, 160, 160"/>
              <LabelWidget Text="打开背包面板" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="打开身体面板" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="丢弃物品" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="更改相机模式" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="骑乘" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="编辑块或物品" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="屏幕截图" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="更改时间 (创造)" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="召唤闪电 (创造)" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="选择背包插槽" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="切换飞行模式 (创造)" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="飞行 上升/下降 (创造)" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="挖掘，攻击，瞄准" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="放置，使用，交互" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="移动所有物品" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="移动单个物品" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="用于分裂的标记栈" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="自动移动背包物品" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="滚动，更改背包插槽" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
              <LabelWidget Text="显示游戏菜单" Font="{Fonts/Pericles18}" Color="160, 160, 160" />
            </StackPanelWidget>
          </StackPanelWidget>

        </ScrollPanelWidget>

      </CanvasWidget>

      <StackPanelWidget HorizontalAlignment="Center">
        <BevelledButtonWidget Name="OkButton" Text="确定" Style="{Styles/ButtonStyle_160x60}"  />
        <CanvasWidget Size="40, 0" />
        <BevelledButtonWidget Name="HelpButton" Text="帮助" Style="{Styles/ButtonStyle_160x60}" />
      </StackPanelWidget>
      
    </StackPanelWidget>

  </CanvasWidget>
</CanvasWidget>
