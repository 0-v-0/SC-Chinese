<ClothingWidget xmlns="runtime-namespace:Game">
  <BevelledRectangleWidget Size="614, 382" Texture="{Textures\Gui\Panel}" BevelSize="3" TextureScale="0.5" />
  <LabelWidget Text="人物状态" Font="{Fonts\Pericles24}" Color="255, 255, 255, 192" Margin="0, 12" HorizontalAlignment="Center"/>

  <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >

    <StackPanelWidget Direction="Vertical">

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="健康值" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30" >
          <BevelledRectangleWidget Size="162, 30" Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <ValueBarWidget Name="HealthValueBar" LayoutDirection="Horizontal" BarsCount="6" LitBarColor="160, 32, 0" UnlitBarColor="48, 48, 48, 80" BarSize="26, 26" BarSubtexture="{Textures\Atlas\ProgressBarLarge}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CanvasWidget>
      </StackPanelWidget>

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="体力值" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30" >
          <BevelledRectangleWidget Size="162, 30" Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <ValueBarWidget Name="StaminaValueBar" LayoutDirection="Horizontal" BarsCount="6" LitBarColor="0, 128, 0" UnlitBarColor="48, 48, 48, 80" BarSize="26, 26" BarSubtexture="{Textures\Atlas\ProgressBarLarge}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CanvasWidget>
      </StackPanelWidget>

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="饱食度" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30" >
          <BevelledRectangleWidget Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <ValueBarWidget Name="FoodValueBar" LayoutDirection="Horizontal" BarsCount="6" LitBarColor="112, 64, 0" UnlitBarColor="48, 48, 48, 80" BarSize="26, 26" BarSubtexture="{Textures\Atlas\ProgressBarLarge}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CanvasWidget>
      </StackPanelWidget>

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="移动速度" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30">
          <BevelledRectangleWidget Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <LabelWidget Name="MovementSpeedLabel" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </CanvasWidget>
      </StackPanelWidget>

    </StackPanelWidget>

    <CanvasWidget Size="60, 0"/>

    <StackPanelWidget Direction="Vertical">

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="空气" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30">
          <BevelledRectangleWidget Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <ValueBarWidget Name="AirValueBar" LayoutDirection="Horizontal" BarsCount="6" LitBarColor="112, 112, 136" UnlitBarColor="48, 48, 48, 80" BarSize="26, 26" BarSubtexture="{Textures\Atlas\ProgressBarLarge}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CanvasWidget>
      </StackPanelWidget>

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="体温" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30">
          <BevelledRectangleWidget Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <ValueBarWidget Name="TemperatureValueBar" LayoutDirection="Horizontal" BarsCount="6" LitBarColor="0, 96, 255" LitBarColor2="255, 96, 0" UnlitBarColor="48, 48, 48, 80" BarSize="26, 26" BarSubtexture="{Textures\Atlas\ProgressBarLarge}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CanvasWidget>
      </StackPanelWidget>

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="身体湿度" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30">
          <BevelledRectangleWidget Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <ValueBarWidget Name="WetnessValueBar" LayoutDirection="Horizontal" BarsCount="6" LitBarColor="0, 0, 128" UnlitBarColor="48, 48, 48, 80" BarSize="26, 26" BarSubtexture="{Textures\Atlas\ProgressBarLarge}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CanvasWidget>
      </StackPanelWidget>

      <StackPanelWidget Direction="Vertical" Margin="0, 4">
        <LabelWidget Text="衣物隔热性" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" Margin="0, 4" />
        <CanvasWidget Size="162, 30">
          <BevelledRectangleWidget Texture="{Textures\Gui\Panel}" BevelSize="-2" TextureScale="0.5" CenterColor="0, 0, 0, 0" />
          <LabelWidget Name="InsulationLabel" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </CanvasWidget>
      </StackPanelWidget>

    </StackPanelWidget>

  </StackPanelWidget>

  <BevelledButtonWidget Name="ChokeButton" CanvasWidget.Position="530, 15" Text="" Style="{Styles\ButtonStyle_70x60}">
    <RectangleWidget Size="40, 40" OutlineColor="0, 0, 0, 0" FillColor="255, 255, 255" Subtexture="{Textures\Atlas\SkullAndBones}" HorizontalAlignment="Center" VerticalAlignment="Center" />
  </BevelledButtonWidget>
</ClothingWidget>
