<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets\TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="游戏已暂停" />
    </CanvasWidget>

    <CanvasWidget Size="Infinity, Infinity" >
      <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

        <CanvasWidget Size="0, 5"/>

        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">
          <LabelWidget Name="GameModeLabel" Text="" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" VerticalAlignment="Center" />
          <LabelWidget Name="StayAliveLabel" Text="" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" VerticalAlignment="Center" />
          <LabelWidget Name="RespawnsLabel" Text="" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" VerticalAlignment="Center" />
          <LabelWidget Name="WorldSeedLabel" Text="" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" VerticalAlignment="Center" />
          <LabelWidget Name="CoordinatesLabel" Text="" Font="{Fonts\Pericles18}" HorizontalAlignment="Center" VerticalAlignment="Center" Color="128, 128, 128" />
        </StackPanelWidget>

        <CanvasWidget Size="0, Infinity" />

        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">
          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
            <BevelledButtonWidget Name="Rate" Style="{Styles\ButtonStyle_310x60}" Text="打分" HorizontalAlignment="Center" Margin="8, 0" />
            <BevelledButtonWidget Name="RestartAdventure" Style="{Styles\ButtonStyle_310x60}" Text="重置冒险模式" HorizontalAlignment="Center" Margin="8, 0" />
          </StackPanelWidget>
          <CanvasWidget Size="0, 10"/>
          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
            <BevelledButtonWidget Name="Settings" Style="{Styles\ButtonStyle_310x60}" Text="设置" HorizontalAlignment="Center" Margin="8, 0" />
            <BevelledButtonWidget Name="Help" Style="{Styles\ButtonStyle_310x60}" Text="帮助" HorizontalAlignment="Center" Margin="8, 0" />
          </StackPanelWidget>
          <CanvasWidget Size="0, 10"/>
          <BevelledButtonWidget Name="Quit" Style="{Styles\ButtonStyle_310x60}" Text="退出" HorizontalAlignment="Center" Margin="0, 0" />
          <CanvasWidget Size="0, 10"/>
        </StackPanelWidget>

      </StackPanelWidget>
    </CanvasWidget>

  </StackPanelWidget>

</Screen>