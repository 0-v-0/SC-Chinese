<Screen xmlns="runtime-namespace:Game">

  <PanoramaWidget />

  <StackPanelWidget Direction="Vertical">

    <CanvasWidget Size="0, Infinity" />

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">
      <RectangleWidget Name="Logo" Size="800, 100" OutlineColor="0, 0, 0, 0" HorizontalAlignment="Center" FillColor="255, 255, 255" Margin="0, 0" Subtexture="{Textures/Gui/Logo}" />
      <CanvasWidget Size="0, 5" />
      <LabelWidget Name="Version" Font="{Fonts/Pericles12}" Text="" HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
    </StackPanelWidget>

    <CanvasWidget Size="0, Infinity" />

    <MotdWidget Size="Infinity, 60"/>

    <CanvasWidget Size="0, Infinity" />

    <StackPanelWidget HorizontalAlignment="Center" Direction="Vertical" Margin="0, 0">
      <StackPanelWidget HorizontalAlignment="Center" >
        <BevelledButtonWidget Name="Play" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" Margin="10, 5" Text="开始游戏" />
        <BevelledButtonWidget Name="Content" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" Margin="10, 5" Text="获取内容" />
      </StackPanelWidget>
      <StackPanelWidget HorizontalAlignment="Center">
        <BevelledButtonWidget Name="Settings" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" Margin="10, 5" Text="设置" />
        <BevelledButtonWidget Name="Help" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" Margin="10, 5" Text="帮助" />
      </StackPanelWidget>
      <BevelledButtonWidget Name="Buy" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" Margin="10, 5" Text="购买游戏" IsVisible="false" >
        <BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="50, 150, 35" BevelColor="50, 150, 35" />
      </BevelledButtonWidget>
    </StackPanelWidget>

    <CanvasWidget Size="0, Infinity" />



  </StackPanelWidget>

</Screen>