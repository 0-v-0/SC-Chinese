<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets\TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="调整操作灵敏度" />
    </CanvasWidget>

    <CanvasWidget Margin="10, 20">
      <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
      <ScrollPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3, 3">
        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="移动灵敏度:" Font="{Fonts\Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="MoveSensitivitySlider" Size="360, 60" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="视角灵敏度:" Font="{Fonts\Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="LookSensitivitySlider" Size="360, 60" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="创造模式飞行速度:" Font="{Fonts\Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="CreativeDigTimeSlider" Size="360, 60" VerticalAlignment="Center" Margin="20, 0" MinValue="0.1" MaxValue="0.3" Granularity="0.05" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="轻触最大判定时间:" Font="{Fonts\Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="TapDurationSlider" Size="360, 60" VerticalAlignment="Center" Margin="20, 0" MinValue="0.2" MaxValue="0.8" Granularity="0.1" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="轻触最大判定距离:" Font="{Fonts\Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="TapDistanceSlider" Size="360, 60" VerticalAlignment="Center" Margin="20, 0" MinValue="5" MaxValue="25" Granularity="1" />
          </UniformSpacingPanelWidget>

        </StackPanelWidget>
      </ScrollPanelWidget>
    </CanvasWidget>

  </StackPanelWidget>

</Screen>