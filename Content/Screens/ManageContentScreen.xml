<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets\TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Manage Content" />
    </CanvasWidget>
    
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

      <LabelWidget Text="(Download more using Community Content)" Font="{Fonts\Pericles18}" Color="128, 128, 128" HorizontalAlignment="Center" Margin="0, 10" />

      <CanvasWidget Margin="20, 0">
        <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
        <ListPanelWidget Name="ContentList" Direction="Vertical" Margin="3, 3" ItemSize="64" SelectionColor="10, 70, 0, 90"/>
      </CanvasWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="0, 10">
        <BevelledButtonWidget Name="DeleteButton" Style="{Styles\ButtonStyle_310x60}" Text="Delete" Margin="10, 0"/>
      </StackPanelWidget>

    </StackPanelWidget>

  </StackPanelWidget>

</Screen>