<Screen xmlns="runtime-namespace:Game">

  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="选择内容类型" />
    </CanvasWidget>

    <CanvasWidget Size="Infinity, 0" />

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="从SD卡获取" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter,HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="External" Text="私人" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="从社区获取" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter,HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Community" Text="社区" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="从链接获取" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter, HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Link" Text="链接" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <CanvasWidget Size="0, 30" />

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="管理下载内容" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter, HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Manage" Text="管理" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

    </StackPanelWidget>

    <CanvasWidget Size="Infinity, 0" />

  </StackPanelWidget>

</Screen>