<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets\TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="选择内容类型" />
    </CanvasWidget>

    <CanvasWidget Size="Infinity, 0" />
    
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="访问你的私有存储空间中的内容" Font="{Fonts\Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter,HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="External" Text="私有" Style="{Styles\ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="访问那些社区成员上传的、经过认证的、面向公众的内容" Font="{Fonts\Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter,HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Community" Text="社区" Style="{Styles\ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="从一个 web 链接下载文件，如果你有一个的话（最好使用复制/粘贴来键入链接）" Font="{Fonts\Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter, HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Link" Text="来自链接" Style="{Styles\ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <CanvasWidget Size="0, 30" />

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="管理下载的内容" Font="{Fonts\Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter, HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Manage" Text="管理" Style="{Styles\ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

    </StackPanelWidget>

    <CanvasWidget Size="Infinity, 0" />
  
  </StackPanelWidget>

</Screen>